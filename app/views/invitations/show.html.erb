<div class="page-header">
  <h3>Invitation #<%= @invitation.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Team</dt>
      <dd>
        <% if @invitation.team.present? %>
          <a href="/teams/<%= @invitation.team_id %>">
            <%= @invitation.team.session_id %>
          </a>
        <% end %>
      </dd>

      <dt>Acceptance</dt>
      <dd><%= @invitation.acceptance %></dd>

      <dt>User</dt>
      <dd>
        <% if @invitation.user.present? %>
          <a href="/users/<%= @invitation.user_id %>">
            <%= @invitation.user.created_at %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/invitations" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @invitation.user %>
        <a href="/invitations/<%= @invitation.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_invitation/<%= @invitation.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>

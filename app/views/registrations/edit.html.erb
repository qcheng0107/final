<!-- Validation failure messages -->
<% if @registration.errors.any? %>
  <% @registration.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Registration #<%= @registration.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_registration/<%= @registration.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for student_id -->
      <div class="form-group">
        <label for="student_id" class="control-label">
          Student
        </label>

        <input type="text" id="student_id" name="student_id" placeholder="Student" class="form-control" value="<%= @registration.student_id %>">
      </div>

      <!-- Label and input for course_id -->
      <div class="form-group">
        <label for="course_id" class="control-label">
          Course
        </label>

        <input type="text" id="course_id" name="course_id" placeholder="Course" class="form-control" value="<%= @registration.course_id %>">
      </div>

      <button class="btn btn-warning">
        Update Registration
      </button>
      or
      <a href="/registrations/<%= @registration.id %>">Cancel</a>
    </form>
  </div>
</div>

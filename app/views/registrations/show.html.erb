<div class="page-header">
  <h3>Registration #<%= @registration.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @registration.student.present? %>
          <a href="/users/<%= @registration.user_id %>">
            <%= @registration.student.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Course</dt>
      <dd>
        <% if @registration.course.present? %>
          <a href="/courses/<%= @registration.course_id %>">
            <%= @registration.course.title %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/registrations" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @registration.student %>
        <a href="/registrations/<%= @registration.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_registration/<%= @registration.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>

<!-- Validation failure messages -->
<% if @session.errors.any? %>
  <% @session.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Session #<%= @session.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_session/<%= @session.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for course_id -->
      <div class="form-group">
        <label for="course_id" class="control-label">
          Course
        </label>

        <input type="text" id="course_id" name="course_id" placeholder="Course" class="form-control" value="<%= @session.course_id %>">
      </div>

      <!-- Label and input for quarter_id -->
      <div class="form-group">
        <label for="quarter_id" class="control-label">
          Quarter
        </label>

        <input type="text" id="quarter_id" name="quarter_id" placeholder="Quarter" class="form-control" value="<%= @session.quarter_id %>">
      </div>

      <button class="btn btn-warning">
        Update Session
      </button>
      or
      <a href="/sessions/<%= @session.id %>">Cancel</a>
    </form>
  </div>
</div>

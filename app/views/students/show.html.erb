<div class="page-header">
  <h3>Student #<%= @student.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @student.email %></dd>

      <dt>Password</dt>
      <dd><%= @student.password %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/students" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A Student has many registrations -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Registrations
      </li>

      <% @student.registrations.each do |registration| %>
        <li class="list-group-item">
          <a href="/registrations/<%= registration.id %>">
            <%= registration.student_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/registrations/<%= registration.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <%if current_user == registration.student %>
              <a href="/registrations/<%= registration.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <a href="/delete_registration/<%= registration.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>


<!-- Validation failure messages -->
<% if @tagging.errors.any? %>
  <% @tagging.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Tagging</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_tagging" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for skill_id -->
      <div class="form-group">
        <label for="skill_id" class="control-label">
          Skill
        </label>

        <%= select_tag(:skill_id, options_from_collection_for_select(Skill.all, :id, :student_id, @tagging.skill_id), :class => "form-control") %>
      </div>

      <!-- Label and input for student_id -->
      <div class="form-group">
        <label for="student_id" class="control-label">
          Student
        </label>

        <%= select_tag(:student_id, options_from_collection_for_select(Student.all, :id, :email, @tagging.student_id), :class => "form-control") %>
      </div>

      <!-- Label and input for team_id -->
      <div class="form-group">
        <label for="team_id" class="control-label">
          Team
        </label>

        <%= select_tag(:team_id, options_from_collection_for_select(Team.all, :id, :course_id, @tagging.team_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Tagging
      </button>
      or
      <a href="/taggings">Cancel</a>
    </form>
  </div>
</div>

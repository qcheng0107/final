<!-- Validation failure messages -->
<% if @tag.errors.any? %>
  <% @tag.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Tag #<%= @tag.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_tag/<%= @tag.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for team_id -->
      <div class="form-group">
        <label for="team_id" class="control-label">
          Team
        </label>

        <%= select_tag(:team_id, options_from_collection_for_select(Team.all, :id, :session_id, @tag.team_id), :class => "form-control") %>
      </div>

      <!-- Label and input for skill_id -->
      <div class="form-group">
        <label for="skill_id" class="control-label">
          Skill
        </label>

        <%= select_tag(:skill_id, options_from_collection_for_select(Skill.all, :id, :user_id, @tag.skill_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Tag
      </button>
      or
      <a href="/tags/<%= @tag.id %>">Cancel</a>
    </form>
  </div>
</div>
